<h1>Coinbase - CoinDCX</h1>

<!-- INR market table -->

<h3>INR Market @ CoinDCX</h3>
<table>
  <thead>
    <tr>
      <th>Coin</th>
      <th>Quote</th>
      <th>Coinbase Price</th> 
      <th>CoinDCX Price</th>
      <th>Difference</th>
      <th>CoinDCX Volume</th>
    </tr>
  </thead>

  <tbody>
    <%= for result <- filter_inr_quotes(@results) do %>
      <tr>
        <td><%= result.coin %></td>
        <td><%= result.quote_currency %></td>
        <td><%= result.coinbase_price |> format_dollar() %></td>
        <td><%= result.coindcx_price |> format_rupee() %></td>
        <td><%= result.difference |> format_percentage %></td>
        <td><%= result.coindcx_volume |> format_rupee() %></td>
      </tr>
    <% end %>
  </tbody>
</table>

