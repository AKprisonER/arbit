<h1>Coinbase - WazirX</h1>

<!-- INR market table -->

<h3>INR Market @ WazirX [WazirX Bids]</h3>
<table>
  <thead>
    <tr>
      <th>Coin</th>
      <th>Quote</th>
      <th>Coinbase Price</th> 
      <th>WazirX Bid Price</th>
      <th>Difference</th>
      <th>WazirX Volume</th>
    </tr>
  </thead>

  <tbody>
    <%= for result <- filter_inr_quotes_and_sort_by_bid_difference(@results) do %>
      <tr>
        <td><%= result.coin %></td>
        <td><%= result.quote_currency %></td>
        <td><%= result.coinbase_price |> format_dollar() %></td>
        <td><%= result.wazirx_bid_price |> format_rupee() %></td>
        <td><%= result.bid_difference |> format_percentage %></td>
        <td><%= result.wazirx_volume |> format_coin_units() %></td>
      </tr>
    <% end %>
  </tbody>
</table>

